{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/server.js",
      "outFiles": ["${workspaceFolder}/backend/dist/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/backend/dist/**",
        "!**/node_modules/**"
      ],
      "sourceMaps": true
    }
  ]
}